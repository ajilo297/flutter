import 'package:auto_route/auto_route.dart';

import 'package:counter/pages/home.dart';
import 'package:counter/pages/login.dart';
import 'package:counter/pages/settings.dart';
import 'package:counter/pages/splash.dart';
import 'package:counter/pages/welcome.dart';

export 'package:auto_route/auto_route.dart';

export 'auth_guard.dart';
export 'router.gr.dart';

@CustomAutoRouter(
  transitionsBuilder: TransitionsBuilders.slideLeftWithFade,
  durationInMilliseconds: 200,
  replaceInRouteName: 'Page,Route',
  routes: <AutoRoute>[
    AutoRoute(
      path: '/',
      page: HomeWrapperPage,
      name: 'HomeRouter',
      children: [
        AutoRoute(path: '', page: HomePage),
        AutoRoute(path: 'settings', page: SettingsPage),
      ],
    ),
    CustomRoute(
      path: '/splash',
      page: SplashPage,
      initial: true,
      transitionsBuilder: TransitionsBuilders.fadeIn,
    ),
    CustomRoute(
      path: '/welcome',
      page: WelcomePage,
      transitionsBuilder: TransitionsBuilders.fadeIn,
    ),
    CustomRoute(
      path: '/login',
      page: LoginPage,
      transitionsBuilder: TransitionsBuilders.fadeIn,
    ),
  ],
)
class $AppRouter {}
